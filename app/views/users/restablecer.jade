extends ../layouts/default


//- CAOB ojo no poner el signo para que no pase de largo

block content
  //-script(type="text/javascript").
  //-window.user = !{user};

  div.panel-body(ng-controller="ctrlPrecargaUsuario")
    //- div.container(style="width: 485PX; padding-top: 30px")
    div.panel.panel-default(style="width:800px;margin-bottom:50px;")
      div.panel-heading
        h4.panel-title
          |Restablecer contraseña
      div.panel-body
        form.form-horizontal(action="/restablecer", method="post",style="padding: 15px")

          div.form-group
            label( class='col-sm-3 control-label', for='email') Email
            div.col-sm-9
              input#name(class= "form-control", required, type='email',  name='email',  placeholder='email')

          div.form-group
            div.col-sm-offset-3.col-sm-10
              button.btn.btn-default(type='submit') Restablecer contraseña

          if (typeof message!== 'undefined')
            div.form-group
                div(class='#{message.class}')
                  div(class='alert alert-#{message.type}')
                    span(class="close", data-dismiss="alert") &times;
                    p= message.data